<!-- 		value="P@ssw0rd" /> </bean> -->

	<bean id="sqlserverJndiDataSource"
		class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName"
			value="java:comp/env/connectSQLServerJdbc/OrderService"></property>
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
		<property name="dataSource" ref="sqlserverJndiDataSource"></property>
		<property name="configLocation">
			<value>classpath:hibernate.cfg.xml</value>
		</property>
	</bean>
	
	<!-- registers our custom HibernateTransactionManager class 'transactionManager' with Annotation -->
	<tx:annotation-driven transaction-manager="transactionManager"/>
	<!-- kinda like; public transactionManager implements HibernateTransactionManager -->
	<bean id="transactionManager" class="org.springframework.orm.hibernate5.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<mvc:annotation-driven></mvc:annotation-driven>
	<!--說明應用程式會使用到annotation組態 -->
	<context:annotation-config />
	<!--使用annotation組態的類別放在model套件內 -->
	<context:component-scan base-package="model" />
	<context:component-scan base-package="model.user" />
	<context:component-scan base-package="model.order" />
<!-- 	<context:component-scan base-package="model.orderDetails" /> -->
	<context:component-scan base-package="model.product" />
	<context:component-scan base-package="model.profile" />
	<context:component-scan base-package="model.setting" />
	<context:component-scan base-package="model.wallet" />
	<context:component-scan base-package="model.mailingList" />
	<!-- redirects user to form.jsp when they land on other pages right away, eg. typing "localhost:8080//SpringMvcWebProject/" -->
	<!-- CHANGE TO CONTROLLER ADDRESS!! TO STRAT INSIDE WEB-INF/ "Login.Controller" -->
	<mvc:view-controller path="/" view-name="controller.HomepageController"/>

</beans>
